{
  "compilerOptions": {
    "target": "ESNext", // Use the latest ECMAScript version for better compatibility
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext", // Keep the ESNext module system for better support with imports/exports
    "moduleResolution": "node", // Change this from "bundler" to "node" for Node.js compatibility
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "prisma/seed.js", "next.config.ts"],
  "exclude": ["node_modules"]
}
